# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token
# Get this from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Channel ID
# Right-click a channel in Discord (with Developer Mode enabled) and click "Copy Channel ID"
DISCORD_CHANNEL_ID=123456789012345678

# Directory to watch for new images (optional)
# Defaults to ~/Dropbox/Photos/gallery-dl if not specified
WATCH_DIR=/Users/yourusername/Dropbox/Photos/gallery-dl

# HTTP server port (optional)
# Defaults to 8080 if not specified
PORT=8080
